package pages;

import org.openqa.selenium.By;

import net.serenitybdd.core.pages.PageObject;
import net.thucydides.core.annotations.DefaultUrl;

@DefaultUrl("https://www.saucedemo.com/inventory.html")
public class SauceDemoFilterAtoZ extends PageObject {
	// Clase para filtrar de la A a la Z
	
	// By para boton de filtro
	By btnFiltro = By.xpath("//*[@class='product_sort_container']");
	
	// By para los textos (El orden que deberia aparecer en consola:)
	By txtBackpack = By.xpath("//div[contains(text(),'Sauce Labs Backpack')]");
	By txtBikeLight = By.xpath("//div[contains(text(),'Sauce Labs Bike Light')]");
	By txtBoltTShirt = By.xpath("//div[contains(text(),'Sauce Labs Bolt T-Shirt')]"); 
	By txtFleeceJacket = By.xpath("//div[contains(text(),'Sauce Labs Fleece Jacket')]");
	By txtOnesie = By.xpath("//div[contains(text(),'Sauce Labs Onesie')]");
	By txtTShirtRed = By.xpath("//div[contains(text(),'Test.allTheThings() T-Shirt (Red)')]");
}
